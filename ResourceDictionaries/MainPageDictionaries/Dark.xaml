<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JevoGastosUWP.ResourceDictionaries.MainPageDictionaries">
    <AcrylicBrush x:Key="Brush_Accent1Background" TintColor="{ThemeResource SystemAccentColor}" FallbackColor="{ThemeResource SystemAccentColor}" BackgroundSource="HostBackdrop" TintOpacity="0.7"/>
    <SolidColorBrush x:Key="Brush_Accent1Foreground" Color="White"/>
    <SolidColorBrush x:Key="Brush_Accent2Background" Color="{ThemeResource SystemAccentColor}"/>
    <SolidColorBrush x:Key="Brush_Accent2Foreground" Color="White"/>
    <SolidColorBrush x:Key="Brush_Accent3Background" Color="Black"/>
    <SolidColorBrush x:Key="Brush_Accent3Foreground" Color="White"/>

    <SolidColorBrush x:Key="Brush_AppBackground1" Color="#111111"/>
    <SolidColorBrush x:Key="Brush_AppBackground2" Color="#222222"/>
    <SolidColorBrush x:Key="Brush_AppBackground3" Color="#333333"/>

    <SolidColorBrush x:Key="Brush_ListViewBackground" Color="Black"/>

    <SolidColorBrush x:Key="Brush_PopupBorder" Color="White"/>
    <Thickness x:Key="Thickness_PopupThickness">
        1
    </Thickness>
</ResourceDictionary>
